<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--水平方向上的间距-->
    <attr name="verticalSpace" format="dimension" />
    <!--垂直方向上的间距-->
    <attr name="horizontalSpace" format="dimension" />

    <declare-styleable name="FlowLayout">
        <attr name="verticalSpace" />
        <attr name="horizontalSpace" />
        <attr name="flowGravity">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
            <enum name="center_horizontal" value="2"/>
            <enum name="center_vertical" value="4"/>
            <enum name="center" value="8"/>
        </attr>
    </declare-styleable>
</resources>